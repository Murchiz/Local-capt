<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="CaptionGenerator.Views.ErrorDialog"
        xmlns:vm="using:CaptionGenerator.ViewModels"
        x:DataType="vm:ErrorDialogViewModel"
        Title="Error">
  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="An error occurred while generating the caption for the current image." TextWrapping="Wrap"/>
    <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" FontWeight="Bold"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
      <Button Content="Stop" Command="{Binding StopCommand}"/>
      <Button Content="Skip this image" Command="{Binding SkipCommand}"/>
    </StackPanel>
  </StackPanel>
</Window>
